[DEFAULT]
disable_fallocate = true
workers = 1
log_facility = LOG_LOCAL2
# NOTE: servers_per_port necessary for replicator/reconstructor so must go here
servers_per_port = <%= @servers_per_port %>

[pipeline:main]
pipeline = <% if @tracing -%>trace <% end -%> recon object-server

[app:object-server]
use = egg:swift#object
<% if ! @replication_server -%>
replication_server = false
<% end -%>

[filter:recon]
use = egg:swift#recon

<% if @tracing -%>
[filter:trace]
use = egg:swift#trace
trace_exporter_module = egg:swift#jaeger_exporter
trace_exporter_config = /etc/swift/jaeger_exporter.json
trace_name = Swift object-server
<% end -%>
